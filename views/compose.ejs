<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="textTitle" class="form-label">Title</label>
        <input type="text" name="textTitle" id="textTitle" class="form-control">
    </div>
    
     <div class="form-group">
        <label for="composedText" class="form-label">Post</label>
        <textarea name="composedText" id="composedText" class="form-control" rows="5"></textarea>
     </div>
        <button type="submit" class="btn btn-primary" name="button">Publish</button>
   
</form>

